<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvDay"
        app:layout_constraintTop_toTopOf="@+id/tvDescription"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:text="..."
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_marginHorizontal="@dimen/dimen10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDay"
        app:layout_constraintEnd_toStartOf="@+id/ivWeather"
        android:text="..."
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivWeather"
        app:layout_constraintStart_toEndOf="@+id/tvDescription"
        app:layout_constraintEnd_toStartOf="@+id/tvTempMax"
        app:layout_constraintTop_toTopOf="@+id/tvDescription"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescription"
        android:src="@drawable/ic_weather_cloudy"
        android:layout_width="@dimen/dimen30dp"
        android:layout_height="@dimen/dimen30dp"/>
    <TextView
        android:id="@+id/tvTempMax"
        android:layout_marginStart="@dimen/dimen10dp"
        app:layout_constraintTop_toTopOf="@+id/tvDescription"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescription"
        app:layout_constraintStart_toEndOf="@+id/ivWeather"
        app:layout_constraintEnd_toStartOf="@+id/tvTempMin"
        android:text="..."
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTempMin"
        android:layout_marginHorizontal="@dimen/dimen5dp"
        app:layout_constraintTop_toTopOf="@+id/tvDescription"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescription"
        app:layout_constraintStart_toEndOf="@+id/tvTempMax"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="..."
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>